pipeline {
    agent any

    stages {
        stage('List files') {
            steps {
                sh 'ls -l'  // Remplace 'dir' par 'ls -l' pour Linux
            }
        }
        stage('Compile') {
            steps {
                sh 'javac -d out src/Main.java'  // Utilise 'sh' pour exécuter la commande de compilation
            }
        }
        stage('Test') {
            steps {
                sh 'java -classpath lib/* src/MainTest.java'  // Exécute les tests avec 'sh'
            }
        }
        stage('Run') {
            steps {
                sh 'java -cp out Main'  // Exécute le programme avec 'sh'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
            archiveArtifacts artifacts: 'out/*.class', allowEmptyArchive: true
        }
        success {
            echo 'Build and tests were successful!'
        }
        failure {
            echo 'There was an error in the pipeline.'
        }
    }
}
