pipeline {
    agent any

    stages {
        stage('List files') {
            steps {
                bat 'dir'
            }
        }
        stage('Compile') {
            steps {
                bat 'javac -d out src/Main.java'
            }
        }
        stage('Test') {
            steps {
                bat 'javac -classpath lib/junit-4.13.1.jar;lib/junit-jupiter-5.8.1.jar;lib/junit-jupiter-api-5.8.1.jar;lib/junit-jupiter-engine-5.8.1.jar;lib/junit-jupiter-params-5.8.1.jar;lib/junit-platform-commons-1.8.1.jar;lib/junit-platform-engine-1.8.1.jar;lib/opentest4j-1.2.0.jar -d out src/MainTest.java'
                bat 'java -cp out;:junit-4.13.1.jar org.junit.runner.JUnitCore MainTest'
            }
        }
        stage('Run') {
            steps {
                bat 'java -cp out Main'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
        success {
            echo 'Build and tests were successful!'
        }
        failure {
            echo 'There was an error in the pipeline.'
        }
    }
}
